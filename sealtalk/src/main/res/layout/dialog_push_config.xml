            android:id="@+id/cb_vivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Channel_vivo" />

        <CheckBox
            android:id="@+id/cb_is_disable_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="是否屏蔽推送标题" />

        <CheckBox
            android:id="@+id/cb_is_show_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="是否强制显示通知详情" />
