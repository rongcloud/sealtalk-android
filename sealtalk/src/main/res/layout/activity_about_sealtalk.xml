<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/seal_mine_about_logo_margin_top"
        android:layout_marginBottom="@dimen/seal_mine_about_logo_margin_bottom"
        android:src="@drawable/seal_app_logo" />

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_update_log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        app:item_content="@string/seal_mine_about_update_log"
        android:visibility="gone"
        app:item_divider="true"/>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_func_introduce"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        app:item_content="@string/seal_mine_about_function_introduce"
        app:item_divider="true">

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_rongcloud_web"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        app:item_content="@string/seal_mine_about_rongcloud_web"
        app:item_divider="true">

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:visibility="gone"
        android:id="@+id/siv_sealtalk_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        app:item_content="@string/seal_mine_about_seal_talk_version"
        app:item_divider="true"
        app:item_tag_image="@drawable/seal_ic_new_version"
        app:item_tag_image_height="@dimen/siv_sealtalk_version_tag_height"
        app:item_tag_image_width="@dimen/siv_sealtalk_version_tag_width">

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_sdk_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        app:item_content="@string/seal_mine_about_sdk_version">

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_close_debug_mode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        android:visibility="gone"
        app:item_content="@string/seal_mine_about_close_debug_mode"
        app:item_divider="true">

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_debug_env"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        android:visibility="gone"
        app:item_divider="true">

    </cn.rongcloud.im.ui.view.SettingItemView>


    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_debug_go"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_about_height"
        android:visibility="gone"
        app:item_content="@string/seal_mine_about_debug_setting"
        app:item_divider="true"/>


    <TextView
        style="@style/TextStyle.Alignment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/seal_mine_about_power_margin_bottom"
        android:gravity="bottom"
        android:text="Powered by RongCloud"
        android:textColor="@color/seal_mine_about_power_text"
        android:textSize="@dimen/seal_mine_about_power_text_size" />
</LinearLayout>